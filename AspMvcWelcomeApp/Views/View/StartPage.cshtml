@{
    string title = "Start Page";
    string time = DateTime.Now.ToLongTimeString();
    bool day = DateTime.Now.Hour < 18;
}
<!DOCTYPE html>
<html>
<head>
    <title>@title</title>
</head>
<body>
    <h1>@title</h1>
    <h2>Current time: @time</h2>
    @if(day)
    {
        <h2>Good Day</h2>
    }
    else
    {
        <h2>Good Evening</h2>
    }
</body>
</html>
